<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#FF0000">
        <ImageView
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.16"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:background="#00FF00">

        <Spinner
            android:layout_marginLeft="@dimen/menu_spinner_margin"
            android:layout_marginRight="@dimen/menu_spinner_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerMain"
            android:layout_centerVertical="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startMap"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#0000FF">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/randomize_button"
            android:id="@+id/randomize_button"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:minHeight="@dimen/menu_button_size"
            android:minWidth="@dimen/menu_button_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_button"
            android:id="@+id/settings_button"
            android:layout_alignTop="@+id/randomize_button"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:minWidth="@dimen/menu_button_size"
            android:minHeight="@dimen/menu_button_size"
            android:onClick="goToConfig"/>
    </RelativeLayout>
</LinearLayout>